<Window x:Class="EasySaveRemoteConsole.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EasySaveRemoteConsole.MVVM.ViewModel"
        Title="Console Distante EasySave" Height="400" Width="600">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <ListView ItemsSource="{Binding Backups}" Name="BackupList" Margin="0,0,0,40">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Name}" Width="150" />
                    <GridViewColumn Header="Statut" DisplayMemberBinding="{Binding Status}" Width="100" />
                    <GridViewColumn Header="Progression" DisplayMemberBinding="{Binding Progress}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Pause" Width="100" Margin="10,0" Command="{Binding PauseCommand}" CommandParameter="{Binding ElementName=BackupList, Path=SelectedItem}" />
            <Button Content="Play" Width="100" Margin="10,0" Command="{Binding PlayCommand}" CommandParameter="{Binding ElementName=BackupList, Path=SelectedItem}" />
            <Button Content="Stop" Width="100" Margin="10,0" Command="{Binding StopCommand}" CommandParameter="{Binding ElementName=BackupList, Path=SelectedItem}" />
        </StackPanel>
    </Grid>
</Window>
