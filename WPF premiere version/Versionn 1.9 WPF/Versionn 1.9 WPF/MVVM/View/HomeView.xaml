<UserControl x:Class="Versionn_1._9_WPF.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Versionn_1._9_WPF.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Background="#252525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <TextBlock Text="Menu Principal" 
                       Foreground="White" 
                       FontSize="24" />
            <Button Content="Langue" 
                    Height="40" 
                    Command="{Binding Path=NavigateLanguageCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
