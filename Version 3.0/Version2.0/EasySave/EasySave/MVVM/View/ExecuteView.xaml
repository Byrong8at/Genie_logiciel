<UserControl x:Class="EasySave.MVVM.View.ExecuteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasySave.MVVM.View"
             xmlns:ikriv="clr-namespace:EasySave.Core.IKriv.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Background="#252525">
    <UserControl.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <TextBlock Text="EasySave" 
           Foreground="#FF8F3FBC" 
           FontSize="36" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" FontWeight="Bold" />

        <TextBlock Grid.Row="1"
                   Text="Exécuter la/les sauvegarde(s)" 
                   Foreground="White" 
                   FontSize="44" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" FontWeight="Bold" />

        <Grid Grid.Row="3"
Height="{Binding RelativeSource={RelativeSource FindAncestor,
 AncestorType={x:Type Grid}},
 Path=RowDefinitions[3].ActualHeight}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="20*"/>

            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="1" 
                       Text="Entrez un nom de sauvegarde, ou '*' pour tout éxécuter :"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="White"/>

            <StackPanel Grid.Row="1" Grid.Column="1" 
      Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
        Height="{Binding RelativeSource={RelativeSource FindAncestor,
         AncestorType={x:Type Grid}},
         Path=RowDefinitions[1].ActualHeight}"
      >
                <TextBox Width="250" Margin="0,0,10,0" x:Name="targetBackupNameTextBox" Text="{Binding targetBackupName, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Exécuter" Command="{Binding Path=ExecuteBackupCommand}" />
            </StackPanel>



            <ListView Grid.Column="1"
                Grid.Row="3"
                Name="ListViewInProgress"
                ItemsSource="{Binding listCurrentBackups}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Numéro" Width="{Binding RelativeSource={RelativeSource FindAncestor,
                                                            AncestorType={x:Type Grid}},
                                                            Path=ColumnDefinitions[1].ActualWidth,
                                                            Converter={ikriv:MathConverter}, ConverterParameter=x/(10)}"
                                        DisplayMemberBinding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                                 AncestorType={x:Type ListViewItem}}, 
                                                                 Converter={StaticResource IndexConverter}}"
                                        />
                        <GridViewColumn Header="Nom" Width="{Binding RelativeSource={RelativeSource FindAncestor,
                                          AncestorType={x:Type Grid}},
                                          Path=ColumnDefinitions[1].ActualWidth,
                                          Converter={ikriv:MathConverter}, ConverterParameter=x/(5)}"
                      DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Source" Width="{Binding RelativeSource={RelativeSource FindAncestor,
                  AncestorType={x:Type Grid}},
                  Path=ColumnDefinitions[1].ActualWidth,
                  Converter={ikriv:MathConverter}, ConverterParameter=x/4}"
                  DisplayMemberBinding="{Binding Source_repertory}"/>
                        <GridViewColumn Header="Cible" Width="{Binding RelativeSource={RelativeSource FindAncestor,
                  AncestorType={x:Type Grid}},
                  Path=ColumnDefinitions[1].ActualWidth,
                  Converter={ikriv:MathConverter}, ConverterParameter=x/4}"
                  DisplayMemberBinding="{Binding Cible_repertory}"/>
                        <GridViewColumn Header="Type de log" Width="{Binding RelativeSource={RelativeSource FindAncestor,
                  AncestorType={x:Type Grid}},
                  Path=ColumnDefinitions[1].ActualWidth,
                  Converter={ikriv:MathConverter}, ConverterParameter=x/6}"
                  DisplayMemberBinding="{Binding Log_type}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Grid.Column="2" Content="||" HorizontalAlignment="Left" Margin="10,2,0,0" Grid.RowSpan="2" Grid.Row="1" VerticalAlignment="Top" Command="{Binding Click_PauseCommand}"/>
            <Button Grid.Column="2" Content="|>" HorizontalAlignment="Left" Margin="27,2,0,0" Grid.RowSpan="2" Grid.Row="1" VerticalAlignment="Top" Command="{Binding Click_StartCommand}" />
            <Button Grid.Column="2" Content="☐" HorizontalAlignment="Left" Margin="57,2,0,0" Grid.RowSpan="2" Grid.Row="1" VerticalAlignment="Top" Command="{Binding Click_BreakCommand}"/>
        </Grid>
    </Grid>
</UserControl>
